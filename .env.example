# PostgreSQL (async driver URL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/url_shortener

# Redis
REDIS_URL=redis://localhost:6379/0

# Base URL used when returning short URLs (no trailing slash)
BASE_URL=http://localhost:8000

# Optional: TTL in seconds for Redis cache entries (leave unset for no expiry)
# REDIS_CACHE_TTL_SECONDS=2592000
